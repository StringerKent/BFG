<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentCharacterSheet">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="Character Sheet"
        android:layout_marginTop="4dp"
        android:id="@+id/characterName"/>

    <TextView
        android:id="@+id/characterClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="class" />

    <TextView
        android:id="@+id/characterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="level" />

    <TextView
        android:id="@+id/characterHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:text="max hp" />

    <TextView
        android:id="@+id/characterKills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp"
        android:text="kills" />

    <TextView
        android:id="@+id/characterDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="209dp"
        android:text="Distance" />

    <TextView
        android:id="@+id/characterXP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:text="Current XP" />

    <TextView
        android:id="@+id/characterNeededXP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="299dp"
        android:text="Needed XP" />

    <TextView
        android:id="@+id/SquatsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterNeededXP"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="184dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="348dp"
        android:text="Squats:" />

    <TextView
        android:id="@+id/squatPwr"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SquatsView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="45dp"
        android:layout_toStartOf="@+id/characterDistance"
        android:text="Pwr" />

    <TextView
        android:id="@+id/squatsComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SquatsView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="174dp"
        android:text="Complete" />

    <TextView
        android:id="@+id/squatChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SquatsView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="49dp"
        android:text="chance" />

    <TextView
        android:id="@+id/lungeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/SquatsView"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="297dp"
        android:text="Lunges:" />

    <TextView
        android:id="@+id/lungesPwr"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lungeView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="36dp"
        android:layout_toStartOf="@+id/characterDistance"
        android:text="TextView" />

    <TextView
        android:id="@+id/lungesComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/squatsComplete"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="274dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/lungesChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lungesComplete"
        android:layout_alignEnd="@+id/squatChance"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-3dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/burpeesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lungeView"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginBottom="246dp"
        android:text="Burpees:" />

    <TextView
        android:id="@+id/burpeesPwr"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/burpeesView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="35dp"
        android:layout_toStartOf="@+id/characterDistance"
        android:text="TextView" />

    <TextView
        android:id="@+id/burpeesComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/burpeesView"
        android:layout_alignEnd="@+id/lungesComplete"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="3dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/burpeesChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/burpeesView"
        android:layout_alignEnd="@+id/squatChance"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-1dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/shadowView"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/SquatsView"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-29dp"
        android:layout_marginBottom="186dp"
        android:text="Shadow Boxing:" />

    <TextView
        android:id="@+id/shadowPwr"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shadowView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="31dp"
        android:layout_toStartOf="@+id/characterDistance"
        android:text="TextView" />

    <TextView
        android:id="@+id/shadowComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shadowView"
        android:layout_alignEnd="@+id/lungesComplete"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="0dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/shadowChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shadowView"
        android:layout_alignEnd="@+id/squatChance"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="0dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/sprintsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/SquatsView"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="131dp"
        android:text="Sprints:" />

    <TextView
        android:id="@+id/sprintsPwr"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sprintsView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@+id/characterDistance"
        android:text="TextView" />

    <TextView
        android:id="@+id/sprintsComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sprintsView"
        android:layout_alignEnd="@+id/squatsComplete"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="1dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/sprintsChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sprintsView"
        android:layout_alignEnd="@+id/squatChance"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="-4dp"
        android:text="TextView" />

    <Button
        android:id="@+id/activeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/squatChance"
        android:layout_alignTop="@+id/characterName"
        android:layout_marginStart="-317dp"
        android:layout_marginTop="642dp"
        android:text="Set as active character" />


</RelativeLayout>