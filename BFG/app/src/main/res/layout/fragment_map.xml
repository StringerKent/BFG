<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_action_bar_splitter"
    android:orientation="vertical"
    tools:context=".FragmentMap">


    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/mapProfileButton"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="337dp"
        android:layout_marginTop="580dp"
        android:background="@android:color/transparent"
        android:text="Swipe--" />

    <Button
        android:id="@+id/mapArenaButton"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="580dp"
        android:background="@android:color/transparent"
        android:text="--Swipe" />

    <TextView
        android:id="@+id/nameSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Welcome to Map"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="25dp" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="344dp"
        android:layout_height="364dp"
        android:layout_below="@+id/nameSelect"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="286dp" />

    <Button
        android:id="@+id/runButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Start Run"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/runTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="Time: 0:0:0"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:text="Distance: 0.0"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20dp"/>

    <Switch
        android:id="@+id/troubleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="19dp"
        android:text="Looking for Trouble"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20dp"/>

</RelativeLayout>