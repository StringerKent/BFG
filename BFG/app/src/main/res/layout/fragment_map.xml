<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentMap">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="Welcome to Map"
        android:layout_marginTop="4dp"
        android:id="@+id/characterName"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="wrap_content"
        android:layout_height="368dp"
        android:layout_below="@+id/characterName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="282dp" />

    <Button
        android:id="@+id/runButton"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mapView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:text="Start Run" />

    <TextView
        android:id="@+id/runTime"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mapView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="283dp"
        android:text="Time: " />

    <TextView
        android:id="@+id/runTime2"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mapView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="572dp"
        android:layout_marginEnd="92dp"
        android:text="0:0:0" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mapView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="602dp"
        android:layout_marginEnd="80dp"
        android:text="0.0" />

    <TextView
        android:id="@+id/distanceRun"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mapView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="602dp"
        android:layout_marginEnd="265dp"
        android:text="Distance:" />

    <Switch
        android:id="@+id/troubleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="19dp"
        android:text="Looking for Trouble" />

</RelativeLayout>