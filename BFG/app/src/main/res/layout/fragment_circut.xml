<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ExerciseBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_action_bar_splitter"
    android:orientation="vertical"
    tools:context=".FragmentCircut">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/characterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Welcome to the Arena"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="25sp" />

    <Button
        android:id="@+id/beginWorkOut"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="232dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Begin Training"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/retreatButton"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="8dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="End Training"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/beginWorkOut"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-232dp">

        <LinearLayout
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/healthBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_above="@+id/beginWorkOut"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="392dp"
        android:layout_marginBottom="-4dp"
        android:progressTint="@android:color/holo_red_dark" />

    <ProgressBar
        android:id="@+id/characterHealth"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_above="@+id/beginWorkOut"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="348dp"
        android:layout_marginBottom="31dp"
        android:progressTint="@color/colorPrimary" />

    <ImageView
        android:id="@+id/monsterImage"
        android:layout_width="350dp"
        android:layout_height="296dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="28dp" />


</RelativeLayout>